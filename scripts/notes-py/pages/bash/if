bash
if

#!/bin/bash

- template
    if [ <test> ]
    then
    tab <command>
    fi

- tests
    if [ ! $1 ] -> if $1 is false

    if [ -n $1 ] -> if len of $1 > 0

    if [ -z $1 ] -> if $1 is empty/null

    if [ $1 = $2 ] -> check str equality

    if [ $1 -gt $2 ] -> greater than

    if [ $1 -lt $2 ] -> less than

    if [ -d $FILE ] -> $FILE exists and is a dir

    if [ -e $FILE ] -> $FILE exists

    if [ -s $FILE ] -> $FILE exists and is not empty